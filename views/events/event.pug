extends ../layout

block content
    .container
        .event-details-page
            .event-header
                .header-top
                    .back-link
                        a.btn.btn-link(href="/events")
                            i.fas.fa-arrow-left
                            span Back to Events
                    .event-status
                        span.status-badge
                            i.fas.fa-clock
                            span Upcoming
                h1.event-title= event.title
            
            .event-details-card
                .event-info-grid
                    .info-item
                        .info-label
                            i.fas.fa-calendar-alt
                            span Date & Time
                        .info-value= new Date(event.date).toLocaleString('en-US', {year: 'numeric', month: 'long',day: 'numeric', hour: '2-digit',minute: '2-digit'})                    
                    .info-item
                        .info-label
                            i.fas.fa-map-marker-alt
                            span Location
                        .info-value= event.location
                    
                    .info-item.full-width
                        .info-label
                            i.fas.fa-align-left
                            span Description
                        .info-value= event.description
                    
                    .info-item
                        .info-label
                            i.fas.fa-clock
                            span Created
                        .info-value= new Date(event.created_at).toLocaleString('en-US', {year: 'numeric', month: 'long',day: 'numeric', hour: '2-digit',minute: '2-digit'})
            .event-actions
                .action-group.primary-actions
                    a.btn.btn-primary(href=`/events/${event.id}/edit`)
                        i.fas.fa-edit
                        span Edit Event
                .action-group.danger-actions
                    form.delete-form(action=`/events/${event.id}?_method=DELETE` method="POST")
                        button.btn.btn-danger(type="submit" onclick="return confirm('Are you sure you want to delete this event? This action cannot be undone.')")
                            i.fas.fa-trash
                            span Delete Event 